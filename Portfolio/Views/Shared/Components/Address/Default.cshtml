@using Portfolio.Entity.Concrete
@model List<Address>


@foreach(var item in Model)
{
    

<div class="col-md-6" data-aos="fade-left" data-aos-delay="300">
    <div class="mt-3 px-1">
        <div class="h5">@item.Title</div>
        <p>@item.Description </p>
        <p>Görüşlerinizi Bekliyoruz!</p>
    </div>
    <div class="mt-53 px-1">
        <div class="row">
            <div class="col-sm-2">
                <div class="pb-1">e-Posta:</div>
            </div>
            <div class="col-sm-10">
                <div class="pb-1 fw-bolder">@item.Mail</div>
            </div>
            <div class="col-sm-2">
                <div class="pb-1">Telefon:</div>
            </div>
            <div class="col-sm-10">
                <div class="pb-1 fw-bolder">@item.Phone</div>
            </div>
            <div class="col-sm-2">
                <div class="pb-1">Mevki:</div>
            </div>
            <div class="col-sm-10">
                <div class="pb-1 fw-bolder">@item.Location</div>
            </div>
        </div>
    </div>
    </div>
}
@using Portfolio.Entity.Concrete
@model List<Project>

<div class="section px-2 px-lg-6 pt-5" id="portfolio">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="marker marker-center">Projelerim </h2>
        </div>
        <div class="grid bp-gallery pb-3" data-aos="zoom-in-up" data-aos-delay="100">
           
          
            @foreach(var item in Model)
            {
                 <div class="grid-item">
                <a href="https://github.com">
                    <figure class="portfolio-item">
                        <img src="@item.ImageUrl" data-bp="@item.ImageUrl" data-caption="Example of an optional caption." />
                        <figcaption>
                            <h4 class="h5 mb-0">@item.Name</h4>
                        </figcaption>
                    </figure>
                </a>
            </div>
            }
           
        </div>
    </div>
</div>

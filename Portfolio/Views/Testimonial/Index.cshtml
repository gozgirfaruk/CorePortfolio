@using Portfolio.Entity.Concrete
@model List<Referance>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Referanslarım</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>

                                <th> Referans Kodu </th>
                                <th> İsim/Soyisim</th>
                                <th> Ünvan </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td> @item.ReferanceID</td>
                                    <td>
                                        <img src="@item.ImageUrl" alt="image" />
                                        <span class="pl-2">@item.ClientName</span>
                                    </td>
                                    <td> @item.CompanyName </td>
                                    <td>
                                        <div class="badge badge-outline-success">Approved</div>
                                    </td>
                                    <td><a href="/Testimonial/Update/@item.ReferanceID" class="btn btn-outline-warning btn-round">Detay</a></td>
                                    <td><a href="/Testimonial/Delete/@item.ReferanceID" class="btn btn-outline-info btn-round">Sil</a></td>

                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
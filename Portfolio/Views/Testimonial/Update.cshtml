@model Portfolio.Entity.Concrete.Referance
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yetenek Güncelleme Sayfası</h4>
            <br />
            @using (Html.BeginForm("Update", "Testimonial", FormMethod.Post))
            {
                <form class="forms-sample">
                    <div class="form-group">
                        @Html.TextBoxFor(x => x.ReferanceID, new { @type = "hidden" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">İsim Soyisim</label>
                        @Html.TextBoxFor(x => x.ClientName, new { @class = "form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Ünvan</label>
                        @Html.TextBoxFor(x => x.CompanyName, new { @class = "form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Resim Yolu</label>
                        @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Düşünceleri</label>
                        @Html.TextAreaFor(x => x.Comment,4,10, new { @class = "form-control" })
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
                    <a href="/Skill/Index/" class="btn btn-dark">Vazgeç</a>
                </form>
            }

        </div>
    </div>
</div>

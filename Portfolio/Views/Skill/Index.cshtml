@using Portfolio.Entity.Concrete
@model List<Skill>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title"><a href="/Skill/AddSkill/" class="btn btn-outline-success">Yeni Yetenek Girişi</a></h4>
            <p class="card-description">
                Tablo : <code>Yeteneklerim Listesi</code>
            </p>
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th> # </th>
                            <th> Yetenek Adı </th>
                            <th> Oran </th>
                            <th> Düzenle </th>
                            <th> Sil </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model)
                        {
                            <tr>
                            <td> @item.SkillID</td>
                            <td> @item.Title</td>
                            <td>
                                <div class="progress">
                                    <div class="progress-bar bg-info" role="progressbar" style="width: @item.Value%" aria-valuenow="@item.Value" aria-valuemin="0" aria-valuemax="100">@item.Value</div>
                                </div>
                            </td>
                            <td> <a href="/Skill/EditSkill/@item.SkillID" class="btn btn-outline-primary">Düzenle</a> </td>
                            <td> <a href="/Skill/DeleteSkill/@item.SkillID" class="btn btn-outline-danger">Sil</a> </td>
                        </tr>
                        }
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
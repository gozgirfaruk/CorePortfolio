@using Portfolio.Entity.Concrete
@model List<Skill>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<body>
    <!-- Main content -->
    <div class="main-content" id="panel">
        <!-- Header -->
        <!-- Header -->
        <div class="header bg-primary pb-6">
            <div class="container-fluid">
                <div class="header-body">
                  
                </div>
            </div>
        </div>
        <!-- Page content -->
        <div class="container-fluid mt--6">
            <div class="row">
                <div class="col">
                </div>
            </div>
            <!-- Dark table -->
            <div class="row">
                <div class="col">
                    <div class="card bg-default shadow">
                        <div class="card-header bg-transparent border-0">
                            <div><a href="/Skill/AddSkill/" class="btn btn-outline-success" style="margin-right:5px;">Yeni Yetenek</a></div>
                            
                        </div>
                        <div class="table-responsive">
                            <table class="table align-items-center table-dark table-flush">
                                <thead class="thead-dark">
                                    <tr>
                                        <th scope="col" class="sort" data-sort="name">#</th>
                                        <th scope="col" class="sort" data-sort="budget">Başlık</th>
                                        <th scope="col" class="sort" data-sort="status">Oran</th>
                                        <th scope="col">Düzenle</th>
                                        <th scope="col" class="sort" data-sort="completion">Sil</th>
                                        <th scope="col"></th>
                                    </tr>
                                </thead>
                                <tbody class="list">
                                    @foreach(var item in Model)
                                    {
                                         <tr>
                                       <th>@item.SkillID</th>
                                        <td class="budget">
                                            @item.Title
                                        </td>
                                       
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <span class="completion mr-2">@item.Value %</span>
                                                <div>
                                                    <div class="progress">
                                                            <div class="progress-bar bg-warning" role="progressbar" aria-valuenow="@item.Value" aria-valuemin="0" aria-valuemax="100" style="width: @item.Value%;"></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                        <td><a href="#" class="btn btn-outline-success">Güncelle</a></td>
                                        <td><a href="#" class="btn btn-outline-danger">Sil</a></td>
                                    </tr>
                                    }
                                   
                                </tbody>
                            </table>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>


@model Portfolio.Entity.Concrete.Skill
@{
    ViewData["Title"] = "EditSkill";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Yetenek Giriş Sayfası</h4>
            <br />
          
            <form class="forms-sample" method="post">
                <div class="form-group">
                   @Html.TextBoxFor(x=>x.SkillID,new {@type="hidden"})
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Yetenek Adı</label>
                    @Html.TextBoxFor(x => x.Title, new { @class = "form-control", @placeholder = "Yetenek Adı" })
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Yetenek Puanı</label>
                    @Html.TextBoxFor(x => x.Value, new { @class = "form-control", @placeholder = "Yetenek Puanı" })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(x => x.SkillImage, new { @type = "hidden" })
                </div>
                <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
               <a href="/Skill/Index/" class="btn btn-dark">Vazgeç</a>
            </form>
        </div>
    </div>
</div>
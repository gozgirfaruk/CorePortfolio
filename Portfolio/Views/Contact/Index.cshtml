@using Portfolio.Entity.Concrete
@model List<Contact>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description">
                Tablo : <code>İletişim Kutusu</code>
            </p>
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th> # </th>
                            <th> Gönderen </th>
                            <th> Mail </th>
                            <th> Tarih</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td> @item.ContactID</td>
                                <th> @item.Name</th>
                                <th> @item.Mail</th>
                                <th> @item.Date.ToShortDateString()</th>
                                <th>
                                    @if (item.Status == true)
                                    {
                                        <button class="btn btn-outline-success btn-round">Okundu</button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-outline-danger btn-round">Okunmadı</button>
                                    }
                                </th>
                                <td> <a href="/Contact/Detail/@item.ContactID" class="btn btn-outline-primary btn-round">Mesajı Gör</a> </td>
                                <td><a href="/Contact/DeleteContact/@item.ContactID" class="btn btn-outline-danger">Sil</a> </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
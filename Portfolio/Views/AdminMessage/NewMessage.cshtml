@model Portfolio.Entity.Concrete.WriterMessage
@{
    ViewData["Title"] = "NewMessage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni İleti Oluştur</h4>
            <br />

            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputUsername1">Alıcı Adı</label>
                    <input type="text" class="form-control" asp-for="ReceiverNAme" id="exampleInputUsername1" placeholder="Alıcı Adı" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputUsername1">Alıcı e-Posta</label>
                    <input type="text" class="form-control" asp-for="Receiver" id="exampleInputUsername1" placeholder="Alıcı e-Posta" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputUsername1">Konu</label>
                    <input type="text" class="form-control" asp-for="Subject" id="exampleInputUsername1" placeholder="Konu" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputUsername1">Alıcı e-Posta</label>
                    <input type="text" class="form-control" asp-for="MessageContent" id="exampleInputUsername1" placeholder="Mesaj" required>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Gönder</button>
                <a href="/AdminMessage/SendBox/" class="btn btn-dark">Vazgeç</a>
            </form>
        </div>
    </div>
</div>


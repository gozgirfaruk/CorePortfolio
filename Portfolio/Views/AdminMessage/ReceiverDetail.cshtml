@model Portfolio.Entity.Concrete.WriterMessage
@{
    ViewData["Title"] = "ReceiverDetail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            <form class="forms-sample">
                <div class="form-group">
                    @Html.TextBoxFor(x => x.WriterMessageID, new { @type = "hidden" })
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Gönderen</label>
                    @Html.TextBoxFor(x => x.SenderName, new { @class = "form-control", @placeholder = "Gönderen" })
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Mail Adresi</label>
                    @Html.TextBoxFor(x => x.Sender, new { @class = "form-control", @placeholder = "Mail Adresi" })
                </div>
                <div class="form-group">
                    <label>Gönderilme Tarihi</label>
                    @Html.TextBoxFor(x => x.Date, new { @class = "form-control", @placeholder = "Gönderilme Tarihi", @type = "datetime" })
                </div>
                <div class="form-group">
                    <label>Konu</label>
                    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control", @placeholder = "Gönderilme Tarihi", @type = "datetime" })
                </div>
                <div class="form-group">
                    <label>Mesaj</label>
                    @Html.TextAreaFor(x => x.MessageContent, 10, 10, new { @class = "form-control", @placeholder = "Açıklama" })
                </div>
                <div class="form-group">
                </div>
                <button type="submit" class="btn btn-primary mr-2">Yanıtla</button>
                <a href="/AdminMessage/Inbox" class="btn btn-dark">Geri Dön</a>
            </form>

        </div>
    </div>
</div>

@using Portfolio.Entity.Concrete
@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-panel">
    
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-row justify-content-between">
                        <p class="card-service">
                            Sayfa : <code>Servis Listem</code>
                        </p>
                            <h4 class="card-title mb-1"><a href="/Service/InsertService/" class="btn btn-outline-light">Yeni Servis Girişi</a></h4>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="preview-list">
                                @foreach(var item in Model)
                                {
                                    <div class="preview-item border-bottom">
                                        <div class="preview-thumbnail">
                                            <div class="preview-icon bg-primary">
                                                <i class="@item.IconUrl"></i>
                                            </div>
                                        </div>
                                        <div class="preview-item-content d-sm-flex flex-grow">
                                            <div class="flex-grow">
                                                <h6 class="preview-subject">@item.Title</h6>
                                                <p class="text-muted mb-0">Proje ID : @item.ServiceID</p>
                                            </div>
                                            <div class="mr-auto text-sm-right pt-2 pt-sm-0">
                                                <p class="text-muted"><a href="/Service/UpdateService/@item.ServiceID" class="btn btn-outline-info">Güncelle</a> </p>
                                                <p class="text-muted"><a href="/Service/Delete/@item.ServiceID" class="btn btn-outline-danger">Sil</a> </p>
                                            </div>
                                        </div>
                                    </div>
                                }
                                
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
   
</div>

@model Portfolio.Entity.Concrete.Experience
@{
    ViewData["Title"] = "AddExp";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Yetenek Giriş Sayfası</h4>
            <br />
            @using(Html.BeginForm("AddExp","Experience",FormMethod.Post))
            {
            <form class="forms-sample">
                <div class="form-group">
                    @Html.TextBoxFor(x=>x.ExperienceID,new {@type="hidden"})
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Deneyim Adı</label>
                    @Html.TextBoxFor(x=>x.Name , new {@class="form-control"})
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Yer/Tarih</label>
                        @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="exampleInputConfirmPassword1">Deneyim İkonu</label>
                        @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                </div>
                    <div class="form-group">
                        <label for="exampleInputConfirmPassword1">Açıklama</label>
                        @Html.TextAreaFor(x => x.Description,4,10, new { @class = "form-control" })
                    </div>
                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <a href="/Experience/Index" class="btn btn-dark">Vazgeç</a>
            </form>
            }
        </div>
    </div>
</div>

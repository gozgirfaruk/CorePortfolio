@model Portfolio.Entity.Concrete.WriterMessage
@{
    ViewData["Title"] = "AddMessage";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h2>Yeni Mesaj Gönderme Sayfası</h2>

<br />
<form class="form-group" method="post">
    <label>Alıcı Mail Adresi</label>
    @Html.TextBoxFor(x=>x.Receiver, new {@class="form-control"})
    <br />

    <label>Konu</label>
    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
    <br />

    <label>Mesaj</label>
    @Html.TextAreaFor(x => x.MessageContent,4,10, new { @class = "form-control" })
    <br />

    <button class="btn btn-primary" href="/Writer/Message/SenderMessage">Gönder</button>
    <a href="/Writer/Message/SenderMessage" class="btn btn-secondary">Vazgeç</a>

</form>
